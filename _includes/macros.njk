{% macro dropdown(id, label, items) %}
<li class="relative list-none font-sans">
    <a href="#" id="{{ id }}">{{ label }}</a>
    <ul
        id="{{ id }}Submenu"
        class="absolute hidden shadow-md rounded-md bg-slate-300"
        aria-labelledby="{{ id }}"
    >
        {% for item in items %}
            <li class="list-none font-sans">
                <a href="{{ item.url | url }}" class="block px-4 py-2 hover:bg-gray-100">{{ item.data.title }}</a>
            </li>
        {% endfor %}
    </ul>
</li>
{% endmacro %}

{% macro listItem(url, label) %}
<li class="list-none font-sans">
    <a href="{{ url }}">{{ label }}</a>
</li>
{% endmacro %}