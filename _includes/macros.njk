{% macro dropdown(id, label, items, homepageUrl) %}
<li class="relative list-none font-sans dropdown">
    <a href="{{ homepageUrl }}" id="{{ id }}" class="dropdown-toggle">{{ label }}</a>
    <ul
        id="{{ id }}Submenu"
        class="absolute hidden shadow-md rounded-md bg-slate-300 dropdown-menu"
        aria-labelledby="{{ id }}"
    >
        <li class="list-none font-sans">
            <a href="{{ homepageUrl }}" class="block px-4 py-2 hover:bg-gray-100">{{ label }} Home</a>
        </li>
        {% for item in items %}
            <li class="list-none font-sans">
                <a href="{{ item.url | url }}" class="block px-4 py-2 hover:bg-gray-100">{{ item.data.title }}</a>
            </li>
        {% endfor %}
    </ul>
</li>
{% endmacro %}