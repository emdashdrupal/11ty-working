{% extends 'layouts/details.njk' %}
<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {# Calendar Section #}
    <section class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-4">Schedule a Meeting</h2>
        <p class="mb-4 text-gray-600">Choose a time that works for you to discuss your content strategy needs.</p>
        <iframe
            src="https://calendar.google.com/calendar/appointments/schedules/AcZssZ1CBWdgGqhLcE1ESu06P0r2-035wBc_jmj5EITbEmOXP5Zir_405nPRA5dBDMDEyZzc-S8AeI4D?gv=true"
            class="max-w-full border-0"
            frameborder="0">
        </iframe>
    </section>

    {# Contact Info Section #}
    <section class="space-y-8">
        {# Social Links #}
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold mb-4">Connect With Me</h2>
            <div class="flex flex-col space-y-4">
                <a href="https://www.linkedin.com/in/ed-marsh/"
                   class="flex items-center space-x-3 text-blue-600 hover:text-blue-800 transition-colors">
                    <i class="fab fa-linkedin text-2xl"></i>
                    <span>LinkedIn Profile</span>
                </a>
                <a href="https://twitter.com/edmarsh"
                   class="flex items-center space-x-3 text-blue-400 hover:text-blue-600 transition-colors">
                    <i class="fab fa-twitter text-2xl"></i>
                    <span>Twitter/X</span>
                </a>
                <a href="https://github.com/edmarsh"
                   class="flex items-center space-x-3 text-gray-800 hover:text-gray-600 transition-colors">
                    <i class="fab fa-github text-2xl"></i>
                    <span>GitHub</span>
                </a>
            </div>
        </div>

        {# Contact Form #}
        <form class="bg-white p-6 rounded-lg shadow-md space-y-4" name="contact" method="POST" data-netlify="true">
            <h2 class="text-2xl font-bold mb-4">Send a Message</h2>
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                <input type="text"
                       id="name"
                       name="name"
                       required
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
            </div>
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email"
                       id="email"
                       name="email"
                       required
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
            </div>
            <div>
                <label for="subject" class="block text-sm font-medium text-gray-700">Subject</label>
                <select id="subject"
                        name="subject"
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                    <option value="consultation">Content Strategy Consultation</option>
                    <option value="podcast">Podcast Guest/Interview</option>
                    <option value="speaking">Speaking Engagement</option>
                    <option value="other">Other</option>
                </select>
            </div>
            <div>
                <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
                <textarea id="message"
                         name="message"
                         rows="4"
                         required
                         class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"></textarea>
            </div>
            <button type="submit"
                    class="w-full bg-medium-blue text-white py-2 px-4 rounded-md hover:bg-blue-700 transition-colors">
                Send Message
            </button>
        </form>

        {# Quick Contact Info #}
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold mb-4">Quick Contact</h2>
            <div class="space-y-3">
                <p class="flex items-center space-x-3">
                    <i class="fas fa-envelope text-gray-600"></i>
                    <a href="mailto:ed@edmarsh.com" class="text-blue-600 hover:text-blue-800">ed@edmarsh.com</a>
                </p>
                <p class="flex items-center space-x-3">
                    <i class="fas fa-rss text-gray-600"></i>
                    <a href="/feed.xml" class="text-blue-600 hover:text-blue-800">RSS Feed</a>
                </p>
            </div>
        </div>
    </section>
</div>

