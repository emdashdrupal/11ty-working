{% include 'layouts/partials/header.njk' %}
<script src="/js/copyCode.js" defer></script>

{% if collectionName == "podcasts" %}
    <figure class="hero flex justify-end float-right ml-2">
        {% include 'layouts/partials/hero-image.njk' %}
    </figure>
{% endif %}
{% if content %}
    {{ content | safe }}
{% endif %}
{% if collectionName == "podcasts" %}
    <div>
        <iframe src='https://widgets.blubrry.com/32643/subscribe/' id='2140010353-subscribe-681e62658dec7' name='2140010353-subscribe-681e62658dec7' allowtransparency='true' style='background: none transparent; border: none; width: 100%; height: auto;'></iframe>

    </div>
    <audio controls>
        <source src="/assets/podcasts/{{mp3File}}" type="audio/mp3">
    </audio>
{% endif %}

{% if collectionName == "podcasts" %}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
        <div class="col-span-1">
            {% include 'layouts/partials/podcasts.njk' %}
        </div>
    </div>
{% endif %}

{% set categories = item.data.categories or item.data.category or [] %}
{% set presentations = collections.presentations | default([]) %}
{% set pageCategory = categories %}

{% set filteredPresentations = presentations | filterByCategory(pageCategory) | default([]) %}

<div class="grid lg:grid-cols-3 md:grid-cols-1 sm:grid-cols-1 gap-4">
    {% if filteredPresentations and filteredPresentations.length > 0 %}
        <div class="col-span-2 gap-4">
            <h2>Related</h2>
            {% include "layouts/partials/presos.njk" %}
        </div>
    {% endif %}
    <div class="md:col-span-1">
        {% include "layouts/partials/tools.njk" %}
    </div>
</div>
</article>

{% include 'layouts/partials/footer.njk' %}