<!doctype html>
<head>
    <script src="https://kit.fontawesome.com/a285d034b2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/_includes/css/base.css">
    <link rel="stylesheet" type="text/css" href="/_includes/css/skill.css">
</head>
{% block content %}
    {% include 'layouts/partials/header.njk' %}
    <hr/>
    <h1>Ed Marsh</h1>
    <h2>Podcasts</h2>
    <div class="skill-grid">

        {% for podcast in collections.podcasts %}

            <div class="max-sm">
                <div class="skill-tile">
                                    <div class="size-min float-left w-5">
                                        {% if podcast.data.cover %}
                                        <img src="/assets/images/{{podcast.data.cover }}" alt="{{ podcast.data.coverAlt }}" width="100"/>
                                        {% else %}
                                        <img src="/assets/images/content-content-podcast-new-cover.png" alt="Content Content podcast" width="100"/>
                                        {% endif %}
                    <a class="ml-4" href="{{ podcast.url }}">{{ podcast.data.title }}</a></div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
</html>