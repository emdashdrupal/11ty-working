{% for presentation in filteredPresentations | sort(false, false, 'year') | reverse %}
  <div class="presentation mb-4">
    {% if presentation.link %}
      <a href="{{ presentation.link }}" class="text-medium-blue hover:text-jet-200">
        {{ presentation.title }}
      </a>
    {% else %}
      <span>{{ presentation.title }}</span>
    {% endif %}
    <span class="text-sm text-jet-600">({{ presentation.year }})</span>
    <p class="text-sm">{{ presentation.venue }} - {{ presentation.type }}</p>
  </div>
{% endfor %}
