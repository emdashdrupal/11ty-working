{% from "layouts/partials/macros.njk" import dropdown,
listItem %}

<div class="grid grid-cols-2 md:grid-cols-3 gap-2 py-0 px-2">
    <div id="tagline" class="col-span-1">
        <a href="/" class="font-sans text-jet-200 font-semibold">
            Successful technical content through community building
        </a>
    </div>

    <div id="menubar">
        <ul class="flex flex-row mt-0 pt-0 items-center" aria-label="Main navigation menu" role="menubar">
            {{ dropdown('skillsDropdown', 'Skills', collections.skills, '/skills/') }}
            {{ dropdown('blogDropdown', 'Blog', collections.blog, '/static-site-transformation/') }}
            {{ listItem('/podcasts/', 'Podcast') }}
            {{ listItem('/about/about-ed-marsh/', 'About') }}
            {{ listItem('/contact/', 'Contact Ed') }}
            {{ listItem('https://linkedin.com/in/edmarsh', 'LinkedIn') }}
            {{ listItem('https://github.com/emdashdrupal/11ty-working', 'GitHub') }}
            <li class="relative ml-4">
                <button id="searchToggle" class="text-whitish hover:text-jet-200" aria-expanded="false" aria-controls="search">
                    <i class="fa-solid fa-search text-2xl"></i>
                    <span class="sr-only">Toggle search</span>
                </button>
                <div id="search" class="hidden absolute right-0 top-full mt-2 w-64 bg-whitish rounded-lg shadow-lg z-50"></div>
            </li>
        </ul>
    </div>
</div>
