{% from "layouts/partials/macros.njk" import dropdown,
listItem %}

    <div class="grid grid-cols-2 md:grid-cols-3 gap-2 py-0 px-2 overflow-x-auto">
        <div id="tagline" class="col-span-1">
            <a href="/" class="font-sans text-whitish font-semibold">
                Successful technical content through community building
            </a>
        </div>

        <div id="menubar">
            <ul class="flex flex-wrap mt-0 pt-0 overflow-x-auto overflow-y-auto" aria-label="Main navigation menu" role="menubar">
                {{ dropdown('skillsDropdown', 'Skills', collections.skills, '/skills') }}
                {{ dropdown('blogDropdown', 'Blog', collections.blog, '/static-site-transformation/') }}
                {{ listItem('/podcasts/', 'Podcast') }}
                {{ listItem('/about/about-ed-marsh', 'About') }}
                {{ listItem('/contact/', 'Contact') }}
            </ul>
        </div>
                        <span id="search" class="float-right bg-whitish max-w-md"/>
    </div>