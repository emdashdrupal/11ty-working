<div class="grid col-auto md:grid-cols-3 gap-3 px-3 py-3 border-2">
    {% for podcast in collections.podcasts %}

        <div class="flex flex-col rounded-xl bg-[#ffffff] shadow-xl max-w-lg my-1">
            <figure class="flex justify-center items-center">
                <a href="{{podcast.page.url}}">
                    <img
                                        {% if podcast.data.cover %}
                                        src="/assets/images/{{podcast.data.cover }}" alt="{{ podcast.data.coverAlt | safe }}"
                                        {% else %}
                                        src="/assets/images/content-content-podcast-new-cover.png" alt="Content Content podcast"
                                        {% endif %} class="h-48 rounded-2xl pointer-events-auto shadow-lg"/>
                </a>
            </figure>
            <div class="flex flex-col p-4 content-evenly">
                <div class="font-bold hover:bg-slate-200 pb-6">
                    <h2 class="hover:bg-slate-200 leading-7"><a href="{{podcast.page.url}}">{{ podcast.data.title |safe }}</a></h2>
                </div>
                <div class="description text-lg">{{podcast.data.description | safe }}</div>
                <div class="flex pt-6">
                    <a href="{{podcast.page.url}}" class="text-gray-700 align-bottom place-items-end">
                        <button class="bg-slate-500 text-[#ffffff]  font-bold text-base  p-2 rounded-lg hover:bg-gray-400 active:scale-95 transition-transform transform shadow-md ">
                        Listen now
                    </button>
                    </a>
                </div>

            </div>

        </div>
    {% endfor %}
</div>