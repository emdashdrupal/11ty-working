<div aria-label="breadcrumb" class="container mx-auto rounded-sm mb-4 px-4 py-2 bg-whitish max-w-6xl flex items-center">
    <span class="fa-solid fa-house text-grey-green"></span>
    <a href="/">Home</a>
    {% if category %}
        <span class="fa-solid fa-chevron-right mx-2 text-sm text-jet-700"></span>
        {% if categoryFontAwesomeIcon %}
            <span class="fa-{{ categoryFontAwesomeIcon }} mx-2 text-grey-green"></span>
        {% endif %}
        <a href="/{{ category | slugify }}">{{ category }}</a>
    {% endif %}
    <span class="fa-solid fa-chevron-right mx-2 text-sm text-jet-700"></span>
    <span class="text-gray-600" aria-current="page">
        {% if FontAwesomeIcon %}
            <span class="fa-{{ FontAwesomeIcon }} mx-2 text-medium-blue"></span>
        {% endif %}{{ title }}</span>

</div>