{% set collectionName = collectionName %}
{% set filtered_collections = collections[collectionName] %}
{% for item in filtered_collections %}

{% set previousPost = collectionName | getPreviousCollectionItem %}
{% set nextPost = collectionName{{/*    */}} | getNextCollectionItem %}

{% if previousPost %}
<a href="{{ previousPost.url }}">Previous: {{ previousPost.data.title }}</a>
{% endif %}
|
{% if nextPost %}
<a href="{{ nextPost.url }}">Next: {{ nextPost.data.title }}</a>
{% endif %}
{% endfor %}