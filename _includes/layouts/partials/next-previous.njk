{% if collections[collectionName] %}
    {% set previousPost = collections[collectionName] | getPreviousCollectionItem(item) %}
    {% set nextPost = collections[collectionName] | getNextCollectionItem(item) %}

    <div class="flex justify-between items-center w-full mb-4 border-t-2" id="next-previous">
        <div class="flex-1 text-jet-200 hover:bg-success-700 align-text-top">
            {% if previousPost %}
                <span class="fa-solid fa-arrow-left-long"></span>
                <a href="{{ previousPost.url }}" class="">

                    <span>
                        {{ previousPost.data.title }}</span>
                </a>
            {% endif %}
        </div>

        <div class="flex-1 align-text-top text-jet-200 hover:bg-success-700 text-right">
            {% if nextPost %}
                <a href="{{ nextPost.url }}">
                    {{ nextPost.data.title }}
                </a>
                <span class="fa-solid fa-arrow-right-long"></span>

            {% endif %}
        </div>
    </div>
{% endif %}