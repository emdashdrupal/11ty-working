<h2>Tools used</h2>
<ul class="tools-list text-md list-none space-y-2">
  {% for tool in filteredTools | sort(false, false, "title") %}
    <li class="font-sans">
      {{ tool.title }}
      {% if tool.publisher %}
        <span class="text-jet-600 text-sm">by {{ tool.publisher }}</span>
      {% endif %}
    </li>
  {% endfor %}
</ul>
{% endif %}