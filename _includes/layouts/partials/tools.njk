{% set pageCategory = category %}
{% set filteredTools = tools | filterToolsByCategory(pageCategory) %}

{% if filteredTools.length > 0 %}
<h2>Tools and Technologies</h2>
{% for tool in filteredTools %}
  <ul class="tools mb-4">
    <li>
      <span class="text-medium-blue">{{ tool.publisher }}</span>
      <span class="text-jet-600">{{ tool.title }}</span>
      {% if tool.category.length > 1 %}
        <span class="text-sm text-jet-400">(Also used for:
          {{ tool.category | filter(cat => cat != pageCategory) | join(', ') }})
        </span>
      {% endif %}
    </li>
  </ul>
{% endfor %}
{% endif %}