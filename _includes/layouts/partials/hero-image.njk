{% if item.data.FontAwesomeIcon or FontAwesomeIcon %}

    <div class="icon fa-{{ item.data.FontAwesomeIcon or FontAwesomeIcon }} text-4xl fill-slate-800 hover:bg-slate-200" aria-label="Icon representing the card"></div>
{% endif %}

{% if collectionName == 'podcasts' %}
    <a href="{{ item.url }}">
        <img
        {% if cover or item.data.cover %}
            src="/assets/images/{{ cover or item.data.cover }}" alt="{{ item.data.coverAlt | safe }}"
{% endif %}
            {% if not cover and not item.data.cover %}
                src="/assets/images/content-content-podcast-new-cover.png" alt="Content Content podcast with Ed Marsh"
            {% endif %}
            class="h-48 rounded-2xl shadow-lg"/>
        </a>

{% endif %}
