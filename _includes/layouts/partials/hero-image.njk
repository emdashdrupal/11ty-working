<figure class="hero flex">
    {% if item.data.FontAwesomeIcon %}
        <div class="float-left grow icon fa-{{ item.data.FontAwesomeIcon }}"></div>
    {% endif %}

    {% if collections.podcasts and item.data.cover %}
        <a href="{{ item.url }}">
            <img src="/assets/images/{{ item.data.cover}}" alt="{{ item.data.coverAlt | safe }}" class="h-48 rounded-2xl pointer-events-auto shadow-lg"/>
        </a>
    {% elif not item.data.cover %}
        <a href="{{ item.url }}">
            <img src="/assets/images/content-content-podcast-new-cover.png" alt="Content Content podcast with Ed Marsh" class="h-48 rounded-2xl shadow-lg"/>
        {% endif %}

    </figure>