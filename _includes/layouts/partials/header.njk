<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="generator" content="{{ eleventy.generator }}">
        <meta
        name="description" content="{{ description | safe }}">
        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-VDL9G7YHY9"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag('js', new Date());
            gtag('config', 'G-VDL9G7YHY9');
        </script>
        <script src="/js/copyCode.js" defer></script>
        <script src="/js/imageExpand.js" defer></script>
        <script src="/js/mobileMenu.js" defer></script>
        <script src="/js/search.js" defer></script>
        <script src="/pagefind/pagefind-ui.js"></script>
        <script>
            window.addEventListener('DOMContentLoaded', (event) => {
                new PagefindUI({element: "#search", showSubResults: false, showImages: false});
            });
        </script>
        <title>
            {% if collectionName == "skills" and layout == "layouts/details.njk" %}
                Ed Marsh can help you with {{ title | lower or metadata.title | lower }}
            {% else %}
                {{ title or metadata.title }}
            {% endif %}
        </title>
        <link rel="icon" href="/assets/images/favicon.ico">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Besley:i|Poppins:i|Reddit+Mono:i">
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Besley:wght@200..900&family=Poppins:wght@200..900&family=Reddit+Mono:wght@200..900&display=swap');
        </style>
        <link href="https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css" rel="stylesheet"/>
        <link rel="stylesheet" type="text/css" href="/css/tw.css">
        <link href="/pagefind/pagefind-ui.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/css/base.css">
        <script src="https://kit.fontawesome.com/c6516df4d1.js" crossorigin="anonymous"></script>
    </head>
    <body class="flex flex-col min-h-screen" data-pagefind-body>
        {% block nav %}
            <header>
                <nav aria-label="ed-marsh-introduction-and-site-navigation-menu">
                    <div class="bg-medium-blue mx-auto max-w-4xl px-2" id="main-navbar">
                        {% include 'layouts/partials/navbar.njk' %}
                    </div>
                    {% include 'layouts/partials/breadcrumb.njk' %}
                </nav>
            </header>
        {% endblock %}
        {% block content %}
            <main class="container mx-auto py-1 px-4 md:px-6 max-w-4xl">
                <article class="max-w-2xl">
                    <h1>{{ title or metadata.title | markdown | safe }}</h1>
                    {% if page.date and page | shouldShowDate %}
                        <div id="dateline" class="italic text-sm mt-2">
                            Last updated: {{ page.date | date("YYYY-MMM-DD") }}
                        </div>
                    {% endif %}
                    {% if description %}
                        <div data-pagefind-weight="6" class="description font-sans my-5">{{ description |
                            markdown | safe }}</div>
                    {% endif %}
                {% endblock %}