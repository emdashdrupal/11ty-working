<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="{{ description | safe }}">
        <title>
            {% if collectionName == "skills" and layout=="layouts/details.njk" %}
                Ed Marsh can help you with {{ title | lower or metadata.title | lower }}
            {% else %}
                {{ title or metadata.title }}
            {% endif %}
        </title>
        <link rel="icon" href="/assets/images/favicon.ico">
        <link rel="canonical" href="https://edmar.sh{{page.url}}"/>
        <link
			href="https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css"
			rel="stylesheet"
		/>
        <link rel="stylesheet" type="text/css" href="/css/tw.css">
        <link href="/pagefind/pagefind-ui.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/css/base.css">
        <link rel="alternate" type="application/rss+xml" title="Content Content podcast with Ed Marsh" href="https://feeds.blubrry.com/feeds/contentcontent.xml"/>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-VDL9G7YHY9"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag('js', new Date());

            gtag('config', 'G-VDL9G7YHY9');
        </script>
        <script src="/js/copyCode.js" defer></script>
        <script src="/js/imageExpand.js" defer></script>
        <script src="https://kit.fontawesome.com/c6516df4d1.js" crossorigin="anonymous"></script>
        <script src="/pagefind/pagefind-ui.js"></script>
        <script>
            window.addEventListener('DOMContentLoaded', (event) => {
                new PagefindUI({element: "#search", showSubResults: false, showImages: false});
            });
        </script>

        <style>
            @import url('https://fonts.googleapis.com/css2?family=Besley:ital,wght@0,400..900;1,400..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Reddit+Mono:wght@200..900&display=swap');
        </style>
    </head>

    <body class="flex flex-col min-h-screen justify-between items-center" data-pagefind-body>
        {% block nav %}
            <nav aria-label="Ed Marsh introduction and site navigation menu" class="mx-auto items-center max-w-4xl px-4" >
                <div id="mainnavbar" class="bg-medium-blue">
                    {% include 'layouts/partials/navbar.njk' %}
                </div>
                {% include 'layouts/partials/breadcrumb.njk' %}
            </nav>
        </div>
    {% endblock %}
    {% block content %}
        <main class="flex flex-col mx-auto items-center">

            <article class="py-1 px-4 md:px-6 {% if layout == "layouts/details.njk" %}prose{% endif %}">
                <h1>{{title or metadata.title}}</h1>

                {% if description %}
                    <div data-pagefind-weight="6" class="description font-sans">{{ description |
                            markdown | safe }}</div>
                {% endif %}

            {% endblock %}