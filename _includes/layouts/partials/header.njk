        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{title or metadata.title}}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Besley:ital,wght@0,400..900;1,400..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Reddit+Mono:wght@200..900&display=swap');
        </style>

        <link
			href="https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css"
			rel="stylesheet"
		/>
        <link rel="stylesheet" type="text/css" href="/css/tw.css">
        {# <link href="/pagefind/pagefind-ui.css" rel="stylesheet"> #}

        <link rel="stylesheet" type="text/css" href="/css/base.css">
        <script src="https://kit.fontawesome.com/c6516df4d1.js" crossorigin="anonymous"></script>

    </head>
    <body class="flex flex-col min-h-screen">
        {% block nav %}
            <nav aria-label="Ed Marsh introduction and site navigation menu">
<div class="container bg-medium-blue mx-auto max-w-6xl px-4" id="menubar">
                {% include 'layouts/partials/navbar.njk' %}
</div>
                {% include 'layouts/partials/breadcrumb.njk' %}
            </nav></div>
        {% endblock %}

        {% block content %}
            <main class="container mx-auto py-1 px-10">

                <article class="{% if layout == "layouts/details.njk" %}prose{% endif %}">
                    <h1>{{title or metadata.title}}</h1>
                    {% if layout == "layouts/details.njk" %}
                        <p class="text-sm font-sans text-gray-600 m-0 p-0">Updated {{ page.date.toDateString()}}</p>
                    {% endif %}

                    {% if description %}
                        <div data-pagefind-weight="6" class="description font-sans">{{ description |
                            markdown | safe }}</div>
                    {% endif %}

                {% endblock %}