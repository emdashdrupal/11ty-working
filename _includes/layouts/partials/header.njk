<header>
    {% set navPages = collections.skills | eleventyNavigation %}

    <nav class="container mx-auto px-4 py-3">
            <ul role="menu">
                <li class="nav-home"><a href="/content">Home</a>
</li>
<li class="nav-podcast">
    <a href="/content/podcasts">Podcasts</a>
    <li class="nav-writing">
        <a href="/content/technical-writing-examples">Writing samples</a>
    <li class="nav-skills relative mr-4">
        <button class="text-gray-900 hover:text-blue-500 inline-flex items-center">
            Skills
