                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
        </button>
        <div class="hidden absolute top-full left-0 bg-white rounded-md shadow-md mt-2">
            <ul class="py-2">
                {% for skill in navPages %}
                    <li class="menu-{{ skill.title }} px-4 py-2 hover:bg-gray-100">
                        <a href="{{ skill.url }}">{{ skill.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </li>
    </div>
    <li class="nav-about">
        <a href="/content/about/about-ed-marsh/">About</a>
    </li>
</ul>
